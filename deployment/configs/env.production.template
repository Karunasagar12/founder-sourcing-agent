# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Database Configuration (Cloud SQL)
DB_HOST=founder-sourcing-agent:us-central1:founder-sourcing-db
DB_PORT=5432
DB_NAME=founder_sourcing_agent
DB_USER=founder_app
DB_PASSWORD=your_secure_db_password

# Application Configuration
SECRET_KEY=your_secure_secret_key_here
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# API Keys (store these securely in production)
HARVEST_API_KEY=your_harvest_api_key
GEMINI_API_KEY=your_gemini_api_key

# CORS Configuration
ALLOWED_ORIGINS=https://founder-sourcing-agent.web.app,https://founder-sourcing-agent.firebaseapp.com

# Cloud Run Configuration
PORT=8080
REGION=us-central1
PROJECT_ID=founder-sourcing-agent

# Security Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
PASSWORD_MIN_LENGTH=8

# Monitoring and Logging
ENABLE_LOGGING=true
LOG_FORMAT=json
